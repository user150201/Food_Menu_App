@model List<Menu.Models.Dish>
@{
    ViewData["Title"] = "MenuIndex";
}

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body text-center">
                        <h4 class="card-title">@item.Name</h4>
                        <img src="@item.ImageUrl" class="img-fluid rounded flex-grow-1" style="width: 100%; height: 300px; object-fit: cover;" alt="@item.Name">
                        <p class="mt-3 font-weight-bold text-primary">$@item.Price.ToString("N2")</p>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">View Dish</a>

                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Add to Plate</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
