@model Menu.Models.Dish
@{
    ViewData["Title"] = "Details";
}

<div class="container">

   
        <div class="d-flex justify-content-center">

            <h3>@Model.Name</h3>
        </div>
        <div class="d-flex justify-content-center">
            <img src=" @Model.ImageUrl" style="width:50%" />
        </div>
        <div class="d-flex justify-content-center">
            $@Model.Price.ToString("N2")
        </div>
    <div class="d-flex justify-content-center">

        Ingrediants :
        <ul>
            @foreach(var item in Model.DishIngrediants)
            {
                <li>
                    @item.Ingrediant.Name
                </li>
            }
        </ul>
    </div>
    <div class="d-flex justify-content-center">
    <a class="btn btn-outline-primary " asp-action="Index">Home</a>
    </div>


</div>