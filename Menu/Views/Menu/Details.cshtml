@model Menu.Models.Dish
@{
    ViewData["Title"] = "Dish Details";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 750px; width: 100%;">
        <div class="card-body text-center">
            <!-- Dish Name -->
            <h2 class="text-primary fw-bold">@Model.Name</h2>

            <!-- Dish Image -->
            <div class="mt-4">
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm border"
                     style="max-width: 100%; height: auto; border-radius: 15px;" alt="@Model.Name">
            </div>

            <!-- Price -->
            <h3 class="mt-4 text-success fw-semibold">
                💲@Model.Price.ToString("N2")
            </h3>

            <!-- Ingredients Section -->
            <div class="mt-4">
                <h4 class="text-secondary fw-semibold">🍽 Ingredients:</h4>
                <ul class="list-group list-group-flush text-start mx-auto" style="max-width: 90%;">
                    @foreach (var item in Model.DishIngrediants)
                    {
                        <li class="list-group-item border-0 bg-light rounded-3 py-2 px-3">
                            ✅ @item.Ingrediant.Name
                        </li>
                    }
                </ul>
            </div>

            <!-- Home Button -->
            <div class="mt-5">
                <a class="btn btn-outline-primary btn-lg rounded-pill px-4 shadow-sm" asp-action="Index">
                    🏠 Home
                </a>
            </div>
        </div>
    </div>
</div>
