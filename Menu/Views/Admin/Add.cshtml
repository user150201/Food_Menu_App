@model Menu.Models.Dish

@{
    ViewData["Title"] = "Add New Dish";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-">
            <h3 class="text-center">Add New Dish</h3>

            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" asp-for="Name" required />
                </div>

                <div class="form-group">
                    <label>Price</label>
                    <input type="number" step="0.01" class="form-control" asp-for="Price" required />
                </div>

                <div class="form-group">
                    <label>Image URL</label>
                    <input type="text" class="form-control" asp-for="ImageUrl" required />
                </div>

                <div class="form-group">
                    <label>Category</label>
                    <input type="text" class="form-control" asp-for="Category" required />
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Add Dish</button>
                </div>


            </form>
        </div>
    </div>
</div>
