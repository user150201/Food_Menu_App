@model Menu.Models.Dish

@{
    ViewData["Title"] = "Add New Dish";
    var ingredients = ViewBag.Ingredients as List<Menu.Models.Ingrediant>;
}

<div class="container">
    <h2 class="text-center">Add a New Dish</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label">Dish Name</label>
            <input type="text" class="form-control" asp-for="Name" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Image URL</label>
            <input type="text" class="form-control" asp-for="ImageUrl">
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="number" class="form-control" asp-for="Price" step="0.01" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Select Ingredients</label>
            <div class="border p-3">
                @foreach (var ingredient in ingredients)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="SelectedIngredients" value="@ingredient.Id">
                        <label class="form-check-label">@ingredient.Name</label>
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-success">Add Dish</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
