@model dynamic
@{
    ViewData["Title"] = "Link Dishes with Ingredients";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4 w-75">
        <div class="card-body">
            <!-- Title -->
            <h2 class="text-center text-dark mb-4">Link Ingredients to Dishes</h2>

            <!-- Form -->
            <form asp-action="LinkDishesWithIngredients" method="post">
                <div class="row">
                    <!-- Select Dish -->
                    <div class="col-md-6">
                        <label for="DishId" class="form-label">Select Dish:</label>
                        <select name="DishId" class="form-control form-select-lg border-secondary" required>
                            <option value="">-- Select Dish --</option>
                            @foreach (var dish in ViewBag.Dishes)

                            {
                                <option value="@dish.Id">@dish.Name</option>
                            }
                        </select>
                    </div>

                    <!-- Select Ingredients -->
                    <div class="col-md-6">
                        <label class="form-label">Select Ingredients:</label>
                        <div class="border rounded p-3 bg-light" style="max-height: 250px; overflow-y: auto;">
                            @foreach (var ingredient in ViewBag.Ingredients)

                            {
                                <div class="form-check">
                                    <input type="checkbox" name="SelectedIngredients" value="@ingredient.Id" class="form-check-input">
                                    <label class="form-check-label">@ingredient.Name</label>
                                </div>
                            }
                        </div>

                        <!-- Add New Ingredient Button -->
                        <div class="text-end mt-2">
                            <a asp-action="AddIngrediant" asp-controller="Admin" class="btn btn-outline-primary btn-sm">
                                ➕ Add New Ingredient
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg rounded shadow-sm px-4">
                        Link Ingredients
                    </button>
                </div>
            </form>

            <!-- Back to Menu -->
            <div class="text-center mt-3">
                <a asp-action="Index" asp-controller="Menu" class="btn btn-outline-secondary rounded px-3">
                    Back to Menu
                </a>
            </div>
        </div>
    </div>
</div>
